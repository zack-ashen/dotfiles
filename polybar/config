[colors]
background = ${xrdb:background:#222}
;background = #bd93f9
background-alt = #444
foreground = ${xrdb:foreground:#222}
foreground-alt = #555
;foreground = #dfdfdf
;accent = ${xrdb:background:#222}
;icon-background = #bd93f9
accent = #5EABC9

[formatting]
icon-padding = 3.5

[bar/master]
width = 100%

fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

font-0 = "Roboto:size=14:style:Regular;2"
font-1 = "Symbols Nerd Font:style=2048-em:size=18;2"

modules-left = space files chrome youtube spotify terminal atom vim visual-studio python-ide intellij eclipse gtk-ide 
modules-center = date
modules-right = alsa powermenu

cursor-click = pointer
cursor-scroll = ns-resize

[bar/rightmon]
inherit = bar/master
monitor = DP-1
height = 4%

[bar/centermon]
inherit = bar/master
monitor = HDMI-0
height = 3.5%

[bar/leftmon]
inherit = bar/master
monitor = DP-4
height = 4%

