[module/date]
type = internal/date
interval = 5

date =
date-alt = "%Y-%m-%d"

time = " %I:%M %p "
time-alt = %H:%M:%S
;format-font = 8
;format-prefix = %{T3}%{T-}
;format-prefix-foreground = ${colors.foreground}
;format-underline = ${colors.bottom-border}
;format-suffix = %{T3}    %{T-}
label = %date% %time%

